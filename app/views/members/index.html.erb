<p id="notice"><%= notice %></p>

<h1>Members</h1>

<table>
  <thead>
    <tr>
      <th width="200">Email</th>
      <th width="100">Confirmed</th>
      <th width="100">Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%= member.email %></td>
        <td><%= member.confirmed %></td>
        <th><%= member.user.name if member.user %></th>
        <td><%= link_to 'Remove', [@exchange,member], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Member', new_exchange_member_path(@exchange) %> | 
<%= link_to 'Back', exchange_path(@exchange) %>